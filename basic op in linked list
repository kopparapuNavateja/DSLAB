#include <stdio.h>
#include <stdlib.h>

struct Node {
    int data;
    struct Node* next;
};

struct Node* head1 = NULL;
struct Node* head2 = NULL;

struct Node* createNode(int value) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    if (newNode == NULL) {
        printf("Memory allocation failed!\n");
        exit(1);
    }
    newNode->data = value;
    newNode->next = NULL;
    return newNode;
}

void insertAtEnd(struct Node** head, int value) {
    struct Node* newNode = createNode(value);
    if (*head == NULL) {
        *head = newNode;
        return;
    }
    struct Node* temp = *head;
    while (temp->next != NULL) {
        temp = temp->next;
    }
    temp->next = newNode;
}

void display(struct Node* head) {
    if (head == NULL) {
        printf("List is empty.\n");
        return;
    }
    struct Node* temp = head;
    printf("List: ");
    while (temp != NULL) {
        printf("%d -> ", temp->data);
        temp = temp->next;
    }
    printf("NULL\n");
}

void reverseList(struct Node** head) {
    struct Node *prev = NULL;
    struct Node *current = *head;
    struct Node *next = NULL;

    if (*head == NULL) {
        printf("List is empty, nothing to reverse.\n");
        return;
    }

    while (current != NULL) {
        next = current->next;
        current->next = prev;
        prev = current;
        current = next;
    }
    *head = prev;
    printf("List reversed successfully.\n");
}

void sortList(struct Node** head) {
    struct Node *i, *j;
    int temp;

    if (*head == NULL || (*head)->next == NULL) {
        printf("List is too short to sort.\n");
        return;
    }

    for (i = *head; i != NULL; i = i->next) {
        for (j = i->next; j != NULL; j = j->next) {
            if (i->data > j->data) {
                temp = i->data;
                i->data = j->data;
                j->data = temp;
            }
        }
    }
    printf("List sorted successfully.\n");
}

void concatenateLists(struct Node** head1, struct Node** head2) {
    if (*head2 == NULL) {
        printf("List 2 is empty. Nothing to concatenate.\n");
        return;
    }

    if (*head1 == NULL) {
        *head1 = *head2;
    } else {
        struct Node* temp = *head1;
        while (temp->next != NULL) {
            temp = temp->next;
        }
        temp->next = *head2;
    }

    *head2 = NULL;
    printf("List 2 concatenated to List 1 successfully.\n");
}

int main() {
    int value, choice, n, i;

    printf("--- Setup List 1 ---\n");
    printf("Enter the number of nodes for List 1: ");
    if (scanf("%d", &n) != 1 || n < 0) {
        printf("Invalid input. Setting List 1 size to 0.\n");
        n = 0;
        while (getchar() != '\n');
    }
    for (i = 0; i < n; i++) {
        printf("Enter value for node %d: ", i + 1);
        if (scanf("%d", &value) != 1) {
            printf("Invalid input. Stopping list creation.\n");
            break;
        }
        insertAtEnd(&head1, value);
    }
    printf("List 1 initial state: ");
    display(head1);

    printf("\n--- Setup List 2 ---\n");
    printf("Enter the number of nodes for List 2: ");
    if (scanf("%d", &n) != 1 || n < 0) {
        printf("Invalid input. Setting List 2 size to 0.\n");
        n = 0;
        while (getchar() != '\n');
    }
    for (i = 0; i < n; i++) {
        printf("Enter value for node %d: ", i + 1);
        if (scanf("%d", &value) != 1) {
            printf("Invalid input. Stopping list creation.\n");
            break;
        }
        insertAtEnd(&head2, value);
    }
    printf("List 2 initial state: ");
    display(head2);

    while (1) {
        printf("\n\n*** LINKED LIST OPERATIONS ***\n");
        printf("1. Display List 1\n");
        printf("2. Display List 2\n");
        printf("3. Reverse List 1\n");
        printf("4. Sort List 1 (Ascending)\n");
        printf("5. Concatenate List 2 to List 1\n");
        printf("7. Reverse List 2\n");
        printf("8. Sort List 2 (Ascending)\n");
        printf("9. Exit\n");
        printf("Enter your choice: ");

        if (scanf("%d", &choice) != 1) {
            printf("Invalid input. Please enter a number.\n");
            while(getchar() != '\n');
            continue;
        }

        switch (choice) {
            case 1:
                display(head1);
                break;
            case 2:
                display(head2);
                break;
            case 3:
                reverseList(&head1);
                display(head1);
                break;
            case 4:
                sortList(&head1);
                display(head1);
                break;
            case 5:
                concatenateLists(&head1, &head2);
                display(head1);
                break;
            case 7:
                reverseList(&head2);
                display(head2);
                break;
            case 8:
                sortList(&head2);
                display(head2);
                break;
            case 9:
                printf("Exiting program !\n");
                exit(0);
            default:
                printf("Invalid choice\n");
        }
    }

    return 0;
}
